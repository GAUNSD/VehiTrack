<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table class="table-hover">
  <thead>
    <tr>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Kilometers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.year %></td>
        <td><%= profile.make %></td>
        <td><%= profile.model %></td>
        <td><%= profile.kilometers %></td>

        <td><%= link_to 'Show', profile, class: 'btn btn-xs' %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-xs' %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_profile_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Profile
<% end %>